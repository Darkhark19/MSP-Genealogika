generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@map("users")
  Tickets Tickets[]
}

model Tickets {
  id      String @id @default(uuid())
  subject String
  content String

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
